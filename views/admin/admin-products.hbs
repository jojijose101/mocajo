<section>
  <div class="container">

    <div class="row">
      <div class="mt-4 py-4">
        <a href="admin/add-product" class="btn btn-success">Add product</a>
      </div>
    </div>

    <table class="table mt-5 display" id="table_id">
      <thead>
        <tr>
          
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">image</th>
          <th scope="col">Options</th>
        </tr>
      </thead>

      <tbody>
        {{#each products}}
          <tr>
         
            <td>{{this.Name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Description}}</td>
            <td><img
                src="product-images/{{this._id}}.jpg"
                style="width: 80px; height: 90;"
              /></td>
            <td>
              <div class="row">
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger mt-2" onclick="return confirm('Are you want to delete {{this.Name}} ?')" >Delete</a>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>
  </div>
</section>
<script>
  $(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>