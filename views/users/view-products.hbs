
     
<section class="">
 
    <div class="container " >

       <div id="carouselExampleControls" class="carousel slide " data-bs-ride="carousel">
  <div class="carousel-inner ">
    <div class="carousel-item active " style="height: 300px; width: 100%;">
      <img src="https://i.pinimg.com/originals/45/de/10/45de10991f7f94728f80339cd4c8e2f9.png" class="d-block w-100 " alt="..."  height="300" >
    </div>
    <div class="carousel-item" style="height: 300px; width: 100%;" >
      <img src="https://images.unsplash.com/photo-1601924994987-69e26d50dc26?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" class="d-block w-100 " height="300" alt="...">
    </div>
    <div class="carousel-item "  style="height: 300px; width: 100%;">
      <img src="https://s3.envato.com/files/221883514/Preview/016%20Slider.jpg" class="d-block w-100 " height="300" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
            {{#each products}}
            <div class="  col-md-3 col-12 ">
                <div class="card " style="width: 28rem; height: 60rem;">
                    <img src="product-images/{{this._id}}.jpg" class="card-img-top " alt="..."
                        style="width: 22rem;height: 22rem;">
                    <div class="card-body">
                        <div style="width: 22rem;height: 2rem;">
                            <h4 class="card-title">{{this.Name}}</h4>
                        </div>
                        <div style="width: 22rem;height: 3rem;">

                            <h5 class="card-text" style="font-weight: bold;">price: <span>{{this.price}}</span></h5>
                        </div>
                        <div style="width: 22rem;height: 15rem;">
                            <p class="card-text">{{this.Description}}</p>
                        </div>
                        <div class="pl-5" style="padding-left: 70px;">
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary ">Add to cart</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}


        </div>
    </div>
</section>