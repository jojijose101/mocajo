<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <a class="navbar-brand title" href="/">Mocajo.shop</a>
    <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown"
      aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon" style=""></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link btn" href="#" style="margin-top: 6px;">Products <span class="sr-only">(current)</span></a>
        </li>

        <a href="/cart"><button class="btn btn-outline-blue" style="margin-top: 15px;" type="submit">
            <i class="bi-cart-fill me-1"></i>
            Cart
            <span class="badge bg-dark text-white ms-1 rounded-pill" id="cart-count">{{cartCount}}</span>
          </button>
        </a>

        {{#if user}}
        <li class="nav-item">
          <a class="nav-link btn" href="/orders" style="margin-top: 6px;">Order</a>
        </li>
        {{/if}}
        <li class="nav-item active">
          <a class="nav-link btn" href="/admin" style="margin-top: 6px;">Go to MJ admin<span
              class="sr-only">(current)</span></a>
        </li>

        <li class="nav-item dropdown">
          {{#if user}}
          <a class="btn dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button"
            data-bs-toggle="dropdown" aria-expanded="true">

            <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg" width="40"
              height="30" class="rounded-circle">
          </a>
          {{else}}
          <a class="btn dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button"
            data-bs-toggle="dropdown" aria-expanded="true" style="margin-top: 6px;">
            Account
          </a>
          {{/if}}

          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            {{#if user}}
            <a class="dropdown-item" href="#">{{user.Name}}</a>

            {{/if}}

            {{#if user}}
            <a class="dropdown-item" href="/logout">Logout</a>
            {{else}}
            <a class="dropdown-item" href="/login">Log in</a>
            {{/if}}

          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
<link rel="stylesheet" href="/stylesheets/style.css">